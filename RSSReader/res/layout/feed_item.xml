<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteFeedButton"
                android:src="@android:drawable/ic_menu_delete"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/SET_FEED_DEFAULT"
                android:id="@+id/setDefaultFeedButton"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lenta.ru"
                android:id="@+id/feedNameText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://lenta.ru/rss"
                android:id="@+id/feedUrlText"/>
    </LinearLayout>
</LinearLayout>